
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin - Đăng Nhập</title>
    <link rel="stylesheet" href="~/Vedor/css/style.css"  />
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh; /* Toàn bộ chiều cao màn hình */
            background: url('/path/to/your/image.jpg') no-repeat center center fixed;
            background-size: cover; /* Ảnh phủ toàn màn hình */
        }

        .wrapper {
            position: relative;
            z-index: 1; /* Giúp chữ và form nằm trên ảnh */
            text-align: center;
            color: white; /* Để chữ rõ hơn nếu ảnh tối */
        }

        /* Thêm lớp overlay mờ để chữ nổi bật hơn */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.2); /* hoặc màu đen mờ */
            z-index: 0;
        }
        .container {
            position: relative;
            z-index: 2; /* chữ và form ở trên nền */
        }
        .bg-bubbles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0; /* nền ở dưới */
        }
        .wrapper h1 {
            font-size: 50px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            /* Màu gradient pastel */
            background: linear-gradient(90deg, #f78a8a, #4fd6a8, #fdb99c);
            background-size: 200% auto;
            color: transparent;
            background-clip: text;
            -webkit-background-clip: text;
            /* Bóng chữ nhẹ */
            text-shadow: 2px 2px 5px rgba(0,0,0,0.15);
            /* Hiệu ứng chuyển màu */
            animation: gradientText 5s ease infinite;
            transition: all 0.4s ease; /* chuyển động mượt khi hover */
        }

        /* Hiệu ứng hover */
        .wrapper h1:hover {
            text-shadow: 0 0 10px rgba(255,255,255,0.8), 0 0 20px rgba(255,200,200,0.7), 0 0 30px rgba(255,150,150,0.5);
            animation: gradientText 2s ease infinite; /* chạy nhanh hơn khi hover */
            transform: scale(1.05); /* phóng to nhẹ */
        {
            @@keyframes gradientText {
            0% { background-position: 0% center; }
            50% { background-position: 100% center; }
            100% { background-position: 0% center; }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="container">
           
            <h1>Đăng Nhập Tài Khoản Admin!</h1>

            <h4 style="color:black; text-align:center">@ViewBag.ThongBao </h4>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="form">
                    <input type="text" name="User_Admin" placeholder="Tài Khoản" required autocomplete="off">
                    <input type="password" name="Pass_Admin" placeholder="Mật Khẩu" required autocomplete="off">
                    <button type="submit">Đăng Nhập</button>
                </div>
            }
        </div>
        <ul class="bg-bubbles">
            <li><img src="~/images/traalisanmilkfoam.png" /></li>
            <li><img src="~/images/trabidao.png" /></li>
            <li><img src="~/images/traden.png" /></li>
            <li><img src="~/images/traearlgreymilk.png" /></li>
            <li><img src="~/images/traolongmilkfoam.png" /></li>
            <li><img src="~/images/trasuamatchadaudo.png" /></li>
            <li><img src="~/images/trasuaolong.png" /></li>
            <li><img src="~/images/trasuaolong3j.png" /></li>
            <li><img src="~/images/traxanh (2).png"/></li>
            <li><img src="~/images/trasuasocola.png" /></li>
            <li><img src="~/images/trasuatranchauden.png" /></li>
            <li><img src="~/images/xoaimedaxay.png" /></li>
            <li><img src="~/images/yakultdaxay.png" /></li>
            <li><img src="~/images/logo_trasua.png" /></li>
            <li><img src="~/images/logo_Webtrasu.png" /></li>
            <li><img src="~/images/logo_MilkTea.png" /></li>
            <li><img src="~/images/logo_Tea.png" /></li>

        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Vedor/js/index.js"></script>
</body>
</html>
