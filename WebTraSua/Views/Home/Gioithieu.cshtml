<style>
    /* Banner nền toàn màn hình */
    .banner-gioithieu {
        background:@Url.Action("~/images/logo_Webtrasu.png") no-repeat center center;
        height: 10vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        text-align: center;
        color: white;
        overflow: hidden;
    }

    .banner-overlay {
        background: rgba(0,0,0,0.5);
        padding: 30px 50px;
        border-radius: 12px;
    }

        .banner-overlay h1 {
            font-size: 52px;
            margin-bottom: 15px;
            font-weight: bold;
            color: #ffd700;
            opacity: 0;
            transform: translateY(40px);
            animation: fadeUp 1.2s ease forwards;
        }

        .banner-overlay p {
            font-size: 20px;
            color: #f8f9fa;
            opacity: 0;
            transform: translateY(40px);
            animation: fadeUp 1.5s ease forwards;
            animation-delay: 0.5s;
        }

    /* Nội dung */
    .gioithieu-content {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
        text-align: center;
        opacity: 0;
        transform: translateY(50px);
        transition: all 1s ease;
    }

        .gioithieu-content h2 {
            font-size: 28px;
            color: #d63384;
            margin-bottom: 20px;
        }

        .gioithieu-content p {
            font-size: 18px;
            line-height: 1.6;
            color: #333;
        }

        /* Khi scroll thì hiện ra */
        .gioithieu-content.show {
            opacity: 1;
            transform: translateY(0);
        }
</style>

<script>
    // Hiệu ứng scroll: hiện nội dung khi trượt xuống
    document.addEventListener("scroll", function () {
        let content = document.querySelector(".gioithieu-content");
        let rect = content.getBoundingClientRect();
        if (rect.top < window.innerHeight - 100) {
            content.classList.add("show");
        }
    });
</script>